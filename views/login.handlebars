<!doctype html>

<html>
<head>
	<title>Food Diary App</title>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<!-- Bootstrap -->
<link href="/css/bootstrap.min.css" rel="stylesheet">
<link href="/css/bootstrap.css" rel="stylesheet">
<link href="/css/bootstrap-theme.min.css" rel="stylesheet">

</head>
<body>
<div id="root" class="text-center">
<h1 class="page-header " >Login</h1>
	<div class="container">
		<text id="error" class="hide">Wrong Username/Password</text>
		<div class="form-group">
			<input type="text" class="larger" name="userid" id="userid" placeholder="Username">
		 </div>
		<div class="form-group">
			<input type="password" class="larger" name="password" id="password" placeholder="password">
		</div>
		<div class="form-group">
			<a href="#" role="button" class="btn btn-primary btn-lg larger" id="login">Login</a>
		</div>
		<div class="form-group">
			<a href="/register" role="button" class="btn btn-primary btn-lg larger">Register</a>
		</div>
		<div class="form-group">
			<fb:login-button 
			  scope="public_profile,email"
			  onlogin="checkLoginState();">
			</fb:login-button>
		</div>
	</div>
</div>
  <script src="https://code.jquery.com/jquery.js"></script>
	<script src="/js/user.js"></script>
	{{>facebook}}
	<script src="/js/facebook.js"></script>
</body>
</html>
