<!doctype html>

<html>
<head>
	<title>Food Diary App</title>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<!-- Bootstrap -->
<link href="/css/bootstrap.min.css" rel="stylesheet">
<link href="/css/bootstrap.css" rel="stylesheet">
<link href="/css/bootstrap-theme.min.css" rel="stylesheet">

</head>
<style>
body {
    background-image: url("/images/224.jpg");

}
h3 {
	margin-left: 30px;
    text-align: left;
    font-family: "Comic Sans MS", cursive, sans-serif;

}
h4{
	text-align:left;
	margin-left: 60px;
	display:inline-block;
    float:left;
}
label {
	font: Arial, Helvetica, sans-serif 100px;
	margin-left: 40px;
}
</style>
<body>
	<div class="navbar" style="float:left">
		<div class="dropdown">
			<button  class="glyphicon glyphicon-list transparent-button "  style="font-size:40px;"></button>
			<div class="dropdown-content">
				<a href="/index/{{id}}">Home</a>
				<a href="/entry/{{id}}">Entry</a>
				<a href="/diary/{{id}}">Diary</a>
				<a href="/stat/{{id}}">Statistics</a>
				<a href="/news/{{id}}">News</a>
				<!--<a href="/community">Community</a>-->
				<a href="/" style="color:red;">Log Out</a>
		</div>
	</div>
	<!--
	  <a href="/help" class="col-lg-offset-4 glyphicon glyphicon-question-sign" style="margin-top:10px; font-size:40px" role="button" id="help" name="entry"></a>
	-->
</div>
<hr>
<div class="text-center" id="root">
	<h1 class="text-center" style="font-family:Palatino;">Settings</h1>
	<h3>Account Information</h2><hr>
	<div class="container" id="account">
		<h4>Username: {{id}}</h4>
		<h4>Email: {{email}}</h4>
		<h4>Phone: {{phone}}</h4>
	</div>
	<fieldset>
	<a href="/" class="btn btn-info btn-sm " style="width:100px;" onclick="clicked(event);"" role="button" id="login">Log Off</a>

</fieldset>
	<form>
		<fieldset>
			<h3>Notifications:</h2><hr>
				<div id="Location">
					<h4>Allow Location</h4>
					<label for="location"></label>
					<label class="switch">
		  			<input type="checkbox">
		  			<span class="slider round"></span>
					</label><br>
				</div>
				<div id="camera">
					<h4>Allow Camera</h4>
					<label for="camera"></label>
					<label class="switch">
				  	<input type="checkbox">
				  	<span class="slider round"></span>
				</label><br>
				</div>
		</fieldset>
	</form>
	<hr>
	<h3>Privacy</h2><hr>
		<div id="share">
			<h4>Share my diary</h4>
			<label class="switch">
	  		<input type="checkbox">
	  		<span class="slider round"></span>
			</label>
		</div>
	<hr>
</div>
<a href="/index/{{id}}" class="btn btn-primary " role="button" id="back">Home</a>

<script>
function clicked(e)
{

    if(!confirm('Are you sure to log off?'))e.preventDefault();
    
}
</script>
